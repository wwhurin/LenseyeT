<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bccolor"
    tools:context="kr.hs.emirim.wwhurin.lenseye5.InsertActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button5"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="25dp"
            android:layout_weight="0.15"
            android:background="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userName"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="이름"
                android:textSize="13sp"
                android:textColor="#ffffff"/>

            <EditText
                android:id="@+id/userName1"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="name"
                android:inputType="textPersonName"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userAge"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="나이"
                android:textSize="13sp"
                android:textColor="#ffffff"/>

            <EditText
                android:id="@+id/userAge1"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:ems="10"
                android:hint="age"
                android:inputType="textPersonName"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userEye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="시력"
                android:textSize="13sp"
                android:textColor="#ffffff"/>

            <EditText
                android:id="@+id/leftEye1"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="left"
                android:inputType="textPersonName"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/rightEye1"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="right"
                android:inputType="textPersonName"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/userDate"
                    android:layout_width="79dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.88"
                    android:text="케이스사용시작일"
                    android:textSize="13sp"
                    android:textColor="#ffffff"/>

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:elevation="0dp"
                    android:onClick="showDatePickerDialog"
                    android:text="날짜선택"

                    android:visibility="visible" />

            </LinearLayout>

            <TextView
                android:id="@+id/textview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:gravity="right"
                android:textColor="#ffffff"/>

            <ImageButton
                android:id="@+id/button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_weight="0.00"
                android:background="@drawable/signup"
                android:text="화원가입" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
